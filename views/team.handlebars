<h3>Add a new Team:</h3>
<form id="add_team" action="/team" method="post">
    Team Name: <input type="text" name="team_name"><br>
    Home Bar: <select name="home_bar_id">
        {{#each bar}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit" class="btn">
</form>
<br />

<h3>Current teams:</h3>
<table class="team_table">
    <thead>
        <th>Team Name</th>
        <th>Home Bar</th>
        <th>Update Team</th>
        <th>Delete Team</th>
    </thead>
    <tbody>
        {{#each teams}}
        <tr>
            <td>{{team_name}}</td>
            <td>{{home_bar_name}}</td>
            <td><a href="/team/{{id}}" class="material-icons teal-text text-lighten-2">update</a></td>
            <td><button onclick="deleteTeam({{id}})" class="material-icons red-text btn-flat">clear</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
